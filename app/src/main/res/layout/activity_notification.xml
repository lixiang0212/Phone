<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/colorWhite"
    >

<RelativeLayout
    style="@style/notification_layout">

    <ImageView
        style="@style/notification_icon"
        android:id="@+id/notification_icon" />
    <TextView
        style="@style/notification_title"
        android:id="@+id/notification_title" />
    <TextView
        style="@style/notification_message"
        android:id="@+id/notification_message" />
    <TextView
        style="@style/notification_text"
        android:id="@+id/notification_text" />
    <ImageView
        style="@style/notification_icon1"
        android:id="@+id/notification_icon1"/>
</RelativeLayout>
</RelativeLayout>