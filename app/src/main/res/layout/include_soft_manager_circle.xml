<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:weightSum="8">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="match_parent">
     <com.androidy.azsecuer.view.MyProgressBar
         android:layout_width="200dp"
         android:layout_height="200dp"
         android:layout_centerInParent="true"
         android:id="@+id/soft_manager_progress"
         app:roundColor="@color/colorDeepSkyBlue"
         app:roundProgressColor="@color/colorGainsboro"
         app:textSize="25sp"
         app:textColor="@color/colorWhite"
         app:max="100"
         app:style="FILL"
         app:style1="FILL"
         />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:weightSum="3"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="手机空间分配情况"
            android:textSize="15sp"
            android:textColor="@color/colorDeepSkyBlue"
            android:gravity="bottom"
            android:layout_weight="1"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/one"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorDeepSkyBlue"
                />
            <TextView
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:text="内置空间"
                android:textColor="@color/colorDeepSkyBlue"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_toRightOf="@+id/one"
                />
            <TextView
                android:id="@+id/soft_circle_sizeIn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:text="0B"
                android:textColor="@color/colorDeepSkyBlue"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_toRightOf="@+id/two"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/one1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorGainsboro"
                />
            <TextView
                android:id="@+id/two1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:text="外置空间"
                android:textColor="@color/colorDeepSkyBlue"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_toRightOf="@+id/one1"
                />
            <TextView
                android:id="@+id/soft_circle_sizeOut"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:text="0B"
                android:textColor="@color/colorDeepSkyBlue"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_toRightOf="@+id/two1"
                />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>