<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="8"
    android:background="@color/colorGainsboro"
    tools:context="com.androidy.azsecuer.activity.SoftWareManageActivity">

    <include layout="@layout/include_actionbar"/>
    <include layout="@layout/include_soft_manager_circle"
            android:layout_marginTop="1dp"
             android:layout_weight="4"
             android:layout_width="match_parent"
             android:layout_height="0dp"
        />
    <include layout="@layout/include_soft_progressbar"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        />
    <include layout="@layout/soft_manager_list"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        />



</LinearLayout>
